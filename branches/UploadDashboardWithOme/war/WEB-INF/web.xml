<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
						http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<display-name>Socat Upload Dashboard</display-name>
	<session-config>
		<session-timeout>180</session-timeout>
	</session-config>

	<!-- Servlets -->
	<servlet>
		<servlet-name>DashboardServlet</servlet-name>
		<servlet-class>gov.noaa.pmel.socat.dashboard.server.DashboardServices</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DashboardServlet</servlet-name>
		<url-pattern>/SocatUploadDashboard/DashboardServices</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DashboardCruiseUploadServlet</servlet-name>
		<servlet-class>gov.noaa.pmel.socat.dashboard.server.CruiseUploadService</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DashboardCruiseUploadServlet</servlet-name>
		<url-pattern>/SocatUploadDashboard/CruiseUploadService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DashboardMetadataUploadServlet</servlet-name>
		<servlet-class>gov.noaa.pmel.socat.dashboard.server.MetadataUploadService</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DashboardMetadataUploadServlet</servlet-name>
		<url-pattern>/SocatUploadDashboard/MetadataUploadService</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>AuthenticateFilter</filter-name>
		<filter-class>gov.noaa.pmel.socat.dashboard.server.AuthenticateFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthenticateFilter</filter-name>
		<url-pattern>/j_security_check</url-pattern>
	</filter-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>SOCAT Dashboard</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>socatdashboarduser</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>socatdashboarduser</realm-name>
		<form-login-config>
			<form-login-page>/socatlogin.html</form-login-page>
			<form-error-page>/socatloginerror.html</form-error-page>
		</form-login-config>
	</login-config>

	<security-role>
		<description>SOCAT Dashboard User</description>
		<role-name>socatdashboarduser</role-name>
	</security-role>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>SocatUploadDashboard.html</welcome-file>
	</welcome-file-list>

</web-app>
